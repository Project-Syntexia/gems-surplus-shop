model Product {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    cart Cart[]
    category ItemsCategoryEnum
    comments Comment[]
    createdDate DateTime @default(now())
    description String
    imageSrc String
    modifiedDate DateTime @updatedAt
    name String
    price Price
    quality QualityEnum
    quantity Int
}

model User {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    address Address
    cart Cart[]
    comments Comment[]
    createdDate DateTime @default(now())
    gender  GenderEnum
    modifiedDate DateTime @updatedAt
    name String
    phoneNumber String @default("000-000-0000")
    userId String @unique
}

type Address {
    city String
    state String
    street String
    zip String
}

type Price {
    currency String
    value Int
}

enum GenderEnum {
    MALE
    FEMALE
}

enum ItemsCategoryEnum {
    ELECTRONICS
    FASHION
    FURNITURE
    HARDWARE_ITEM
    MEDIA
    TOYS_AND_HOBBIES
}

enum QualityEnum {
    LIKE_BRAND_NEW
    SLIGHTLY_USED
    USED
}

