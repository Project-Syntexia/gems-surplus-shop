datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Cart {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    user User @relation(fields: [userId], references: [userId])
    userId String
    quantity Int
    product Product @relation(fields: [productId], references: [id])
    productId String @db.ObjectId
}

model Comment {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    comment String
    createdDate DateTime @default(now())
    modifiedDate DateTime @updatedAt
    product Product @relation(fields: [productId], references: [id])
    productId String @db.ObjectId
    rating Int
    user User @relation(fields: [userId], references: [userId])
    userId String @unique
}

model Logs {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    createdDate DateTime @default(now())
    description String
    model ModelEnum
}

model Product {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    brand String @default("UNBRANDED")
    cart Cart[]
    category ItemsCategoryEnum
    comments Comment[]
    createdDate DateTime @default(now())
    description String
    images ProductImage[]
    modifiedDate DateTime @updatedAt
    ratings ProductRatings
    name String
    price Price
    quality QualityEnum
    quantity Int
}

model User {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    address Address
    cart Cart[]
    comments Comment[]
    createdDate DateTime @default(now())
    gender  GenderEnum
    modifiedDate DateTime @updatedAt
    name String
    phoneNumber PhoneNumber
    userId String @unique
}

type Address {
    city String
    state String
    street String
    zip String
}

type PhoneNumber {
    countryCode Int
    value String @default("000-000-0000")
}

type Price {
    currency Currency
    value Int
}

type ProductImage {
    alternateText String
    customBorder String @default("NONE")
    isHidden Boolean
    orderNumber Int
    source String
}

type ProductRatings {
    totalRating Int @default(0)
    numberOfRating Int @default(0)
}

enum Currency {
    PHP
    USD
}

enum GenderEnum {
    MALE
    FEMALE
}

enum ItemsCategoryEnum {
    ELECTRONICS
    FASHION
    FURNITURE
    HARDWARE_ITEM
    MEDIA
    TOYS_AND_HOBBIES
}

enum ModelEnum {
    CART
    COMMENT
    PRODUCT
    USER
}

enum QualityEnum {
    LIKE_BRAND_NEW
    SLIGHTLY_USED
    USED
}